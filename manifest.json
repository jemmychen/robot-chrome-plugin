{
  "name": "SocketIO DOM Controller",
  "version": "1.0",
  "manifest_version": 3,
  "description": "通过 Socket.IO 接收服务端指令并操作 DOM",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open Popup in Tab"
  }
}